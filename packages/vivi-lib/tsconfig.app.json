{
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "src/**/*.json",
    "../shared-lib/src/**/*.vue",
    "../shared-lib/src/**/*.ts",
    "../tailwind-lib/colors.json"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "composite": true,
    "rootDir": "../../",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@nu/tailwind-lib/*": [
        "../tailwind-lib/*"
      ],
      "@nu/shared-lib/*": [
        "../shared-lib/src/*"
      ],
      "@nu/shared-lib": [
        "../shared-lib/src/index"
      ],
      "@img/*": [
        "./src/assets/img/*"
      ],
      "@json/*": [
        "./src/assets/json/*"
      ]
    },
    "types": [
      "vite/client",
      "wicg-file-system-access"
    ],
    "lib": [
      "ESNext",
      "DOM",
      "dom.iterable"
    ]
  },
  "vueCompilerOptions": {
    "plugins": [
      "@vue/language-plugin-pug"
    ]
  }
}
