{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.json",
    "../../packages/vivi-lib/src/**/*",
    "../../packages/shared-lib/src/**/*"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "rootDir": "../../",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@i18n/*": [
        "./src/i18n/shaked/*"
      ],
      "@/*": [
        "./src/*"
      ],
      "@nu/shared-lib/*": [
        "../../packages/shared-lib/src/*"
      ],
      "@nu/shared-lib": [
        "../../packages/shared-lib/src/index"
      ],
      "@nu/vivi-lib/*": [
        "../../packages/vivi-lib/src/*",
        "../../packages/vivi-lib/src/index"
      ]
    },
    "types": [
      "vite/client"
    ],
    "resolveJsonModule": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "target": "ESNext",
    "module": "ESNext"
  },
  "vueCompilerOptions": {
    "plugins": [
      "@vue/language-plugin-pug"
    ]
  }
}
