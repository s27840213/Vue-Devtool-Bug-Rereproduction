{
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "src/**/*.json"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "composite": true,
    "rootDir": "../../",
    "baseUrl": ".",
    "types": [
      "vite/client",
      "wicg-file-system-access"
    ],
    "lib": [
      "ESNext",
      "DOM",
      "dom.iterable"
    ]
  },
  "vueCompilerOptions": {
    "plugins": []
  }
}
