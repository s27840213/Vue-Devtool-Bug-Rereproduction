{
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "src/**/*.json",
    "../../packages/vivi-lib/src/**/*.vue",
    "../../packages/vivi-lib/src/**/*.ts",
    "../../packages/shared-lib/src/**/*.vue",
    "../../packages/shared-lib/src/**/*.ts"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "composite": true,
    "rootDir": "../../",
    "baseUrl": ".",
    "paths": {
      "@i18n/*": [
        "./src/i18n/shaked/*"
      ],
      "@/*": [
        "./src/*",
        "../../packages/vivi-lib/src/*"
      ],
      "@nu/shared-lib/*": [
        "../../packages/shared-lib/src/*"
      ],
      "@nu/shared-lib": [
        "../../packages/shared-lib/src/index"
      ],
      "@nu/vivi-lib/*": [
        "../../packages/vivi-lib/src/*",
        "../../packages/vivi-lib/src/index"
      ]
    },
    "types": [
      "vite/client"
    ],
    "lib": [
      "ESNext",
      "DOM",
      "dom.iterable"
    ]
  },
  "vueCompilerOptions": {
    "plugins": [
      "@vue/language-plugin-pug"
    ]
  }
}
